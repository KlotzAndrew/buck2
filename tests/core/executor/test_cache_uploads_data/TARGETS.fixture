load("@root//:rules.bzl", "write")

write(
    name = "write",
    text = read_config("write", "text") or fail("text missing"),
    allow_cache_upload = True,
    local_only = True,
    default_target_platform = "//platforms:target",
    exec_compatible_with = ["//platforms:cache_uploads"],
)

write(
    name = "write_in_dir",
    format = "{}/some/file",
    text = read_config("write", "text") or fail("text missing"),
    allow_cache_upload = True,
    local_only = True,
    dir = True,
    default_target_platform = "//platforms:target",
    exec_compatible_with = ["//platforms:cache_uploads"],
)

write(
    name = "write_xxl",
    text = "x" * 1024 * 1024 * 4,  # 4MB of X
    allow_cache_upload = True,
    local_only = True,
    default_target_platform = "//platforms:target",
    exec_compatible_with = ["//platforms:cache_uploads"],
)

write(
    name = "write_default",
    text = read_config("write", "text") or fail("text missing"),
    allow_cache_upload = None,
    local_only = True,
    default_target_platform = "//platforms:target",
    exec_compatible_with = ["//platforms:cache_uploads"],
)
